[init]
  templatedir = ~/.git_template
	defaultBranch = main
[push]
  default = current
[color]
  ui = auto
[alias]
  branches = for-each-ref --sort=-committerdate --count=10 --format=\"%(color:blue)%(authordate:relative) %(color:green)%(color:bold)%(refname:short) %(color:red)%(authoremail)\" refs/remotes
  ci = commit -v
  co = checkout
  pf = push --force-with-lease
  st = status
  cm = commit -m
  rb = branches --count=10
  cleanup = !git branch --merged | grep  -v '\\*\\|master\\|develop' | xargs -n 1 git branch -d
[core]
  excludesfile = ~/.gitignore
  editor = code
  autocrlf = input
[merge]
  ff = only
[commit]
  template = ~/.gitmessage
[fetch]
  prune = true
[rebase]
  autosquash = true
[include]
  path = ~/.gitconfig.local
[diff]
  colorMoved = zebra
  mnemonicprefix = true
[user]
  name = Nick Weiland
  email = nickweiland@gmail.com
  username = weilandia
[credential]
	helper = /usr/local/share/gcm-core/git-credential-manager
[credential "https://dev.azure.com"]
	useHttpPath = true
